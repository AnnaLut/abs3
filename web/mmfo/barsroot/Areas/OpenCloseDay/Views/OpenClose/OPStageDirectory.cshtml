}
<script src="~/Areas/OpenCloseDay/Scripts/stageDirectory.js" charset="utf-8"></script>
<form class="form-horizontal">
    <div class="panel panel-default" style="width:1000px;float: none; margin-left: auto; margin-right: auto;">
