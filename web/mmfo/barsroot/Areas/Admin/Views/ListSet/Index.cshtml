<div id="listSet-window">
    <form id="listSet-form">
        <table id="listSet-tbl" class="table">
            <tbody>
            <tr>
                <td>Назва нобору:</td>
                <td><input id="name" style="width: 100%;" name="name" maxlength="50"/></td>
            </tr>
            <tr>
                <td>Коментар:</td>
                <td><textarea id="comment" class="k-textbox" style="width: 100%; resize: none;" maxlength="100" rows="5" name="comment"></textarea></td>
                <!--<td><input id="comment" style="width: 100%;" name="comment" maxlength="100"/></td>-->
            </tr>
            <tr>
                <td style="border-width: inherit;"></td>
                <td style="float: right; border-width: inherit;">
                    <button id="set-cencel" class="k-button" title="Відмінити">Відмінити</button>
                    <button id="set-add" class="k-button">Виконати</button>
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>

<div id="func-window">
    <form id="func-form">
        <table id="func-tbl" class="table">
            <tbody>
                <!--<tr>
                    <td>FUNC ACTIVITY:</td>
                    <td><input id="func-activity" type="checkbox" /></td>
                </tr>-->
                <tr>
                    <td>Коментар:</td>
                    <td style="width: 500px;">
                        <textarea id="func-comment" class="k-textbox" style="width: 100%;resize: none;" maxlength="100" rows="5" name="comment"></textarea>
                    </td>
                </tr>
                <tr>
                    <td style="border-width: inherit;"></td>
                    <td style="float: right; border-width: inherit;">
                        <button id="func-cencel" class="k-button" title="Відмінити">Відмінити</button>
                        <button id="func-save" class="k-button">Зберегти</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>