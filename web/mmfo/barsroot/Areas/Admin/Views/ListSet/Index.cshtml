@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "Редагування списку функцій Відкриття/Закриття дня";
}

<script src="~/Areas/Admin/Scripts/listSetCtrl.js"></script>
<link href="~/Areas/Admin/Css/listSet.css" rel="stylesheet">

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Доступні набори фукнкцій</h3>
    </div>
    <div class="panel-body" style="padding: 0px;">
        <div id="toolbar"></div>
        <div id="ListSetGrid"></div>
    </div>
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Налаштування набору</h3>
    </div>
    <div class="panel-body" style="padding: 0px;">
        <div id="panels">
            <div id="InUse"></div>
            <div id="commands">
                <div><a href="#" id="copyIn" class="k-button"><i class="fa fa-chevron-left"></i></a></div>
                <div><a href="#" id="copyOut" class="k-button"><i class="fa fa-chevron-right"></i></a></div>
                <div><a href="#" id="up" class="k-button"><i class="fa fa-chevron-up"></i></a></div>
                <div><a href="#" id="down" class="k-button"><i class="fa fa-chevron-down"></i></a></div>
                <!--
                <div><a href="#" id="add" class="k-button"><i class="fa fa-check-square-o"></i></a></div>
                <div><a href="#" id="drop" class="k-button"><i class="fa fa-times"></i></a></div>
                -->
            </div>
            <div id="OutUse"></div> 
        </div>
    </div>
</div>

