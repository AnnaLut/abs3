
<script type="text/javascript" src="~/Areas/AccessToAccounts/Scripts/Controllers/AccRoleGroupCtrl.js"></script>
<link rel="stylesheet" href="~/Areas/AccessToAccounts/CSS/Groups.css"/>
@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "АРМ Адміністрування доступу до груп";
}
<h2>@ViewBag.Title</h2>
<div ng-app="BarsWeb.Controllers" ng-controller="RoleGroupsCtrl">
    <form>
        <table>
            <tr>
                <td colspan="4">
                    <div kendo-grid="gridRoleGroupsOptions" k-options="gridRoleGroupsOptions" k-on-change="selectedGroup(data)"></div>
                </td>
            </tr>   
            <tr>
                <td style="vertical-align:top" width="15%">
                    <div id="roles" kendo-grid="gridIssuedAccounts" k-options="gridIssuedAccountsOptions"></div>
                </td>
                <td style="vertical-align:top">
                    <div kendo-grid="gridNotIssuedAccounts" k-options="gridNotIssuedAccountsOptions"></div>
                </td>
                <td style="vertical-align:top">
                    <div kendo-grid="gridAccounts" k-options="gridAccountsOptions"></div>
                </td>
                <td style="vertical-align:top">
                    <div id="gridGrpAccounts" kendo-grid="gridGrpAccounts" k-options="gridGrpAccountsOptions"></div>
                </td>
            </tr>
          
        </table>
    </form>
    <div id="mydiv">
        <img src="~/Areas/AccessToAccounts/Content/loader.gif" width="100" height="100" class="ajax-loader" />
    </div>
</div>
