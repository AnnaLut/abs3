<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Вкажіть клієнта">
  <customforms>
    <customform name="frmRnk" buttonsposition="Bottom">
      <customfields>
        <customfield name="rnk" datatype="Int64" index="1" label="РНК" >
          <uicontrol controlwidth="200"></uicontrol>
        </customfield>
        <customfield name="okpo" datatype="String" index="2" label="ЗКПО">
          <uicontrol controlwidth="200"></uicontrol>
        </customfield>
        <customfield name="nmk" datatype="String" index="3" label="ПІБ (назва)">
          <uicontrol controlwidth="200"></uicontrol>
        </customfield>
      </customfields>
      <buttons defaulttype="Button">
        <button id="btnSearch" caption="Знайти" hint="Знайти клієнта">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=bpkw4.ref.customer_uo">
            <parameters>
              <parameter type="QueryString" name="proect_id" altname="proect_id"></parameter>
              <parameter type="QueryString" name="card_code" altname="card_code"></parameter>
              <parameter type="FormField" name="rnk" altname="rnk"></parameter>
              <parameter type="FormField" name="okpo" altname="okpo"></parameter>
              <parameter type="FormField" name="nmk" altname="nmk"></parameter>
              <parameter type="QueryString" name="card_kiev" altname="card_kiev"></parameter>
              <parameter type="QueryString" name="frm_id" altname="frm_id"></parameter>
            </parameters>
          </command>
        </button>
      </buttons>
    </customform>
  </customforms>
</xmlform>

