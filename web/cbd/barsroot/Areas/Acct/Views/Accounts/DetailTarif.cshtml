@{
  Layout = null;
}
@model int

@(Html.Kendo().Grid<V_SH_TARIF>()
  .Name("TarifGrid")
  .Columns(columns => 
  {
    columns.Bound(i => i.ID).Title("Код");
    columns.Bound(i => i.NAME).Title("Найменування тарифу-комісії");
    columns.Bound(i => i.KV).Title("Валюта");
    columns.Bound(i => i.TAR).Title("Тариф");
    columns.Bound(i => i.PR).Title("Комісія(%)");    
    columns.Bound(i => i.SMIN).Title("Мін. сума");
    columns.Bound(i => i.SMAX).Title("Макс. сума");
    columns.Bound(i => i.BDATE).Title("Дата поч. дії");
    columns.Bound(i => i.EDATE).Title("Дата зак. дії");        
  })
  .DataSource(source => source
    .Ajax()
    .PageSize(10)
    .Read(read=>read.Url(Url.Content("~/acct/accounts/tarifgriddata/?id=" + Model))))
)
