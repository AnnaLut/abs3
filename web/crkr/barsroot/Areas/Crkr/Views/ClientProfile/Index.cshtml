        </ul>
        <div class="panels">
            <div id="clientProfileGrid"></div>
        </div>
        <div class="panels">
            <div id="depoOnFuneral"></div>
        </div>
        @*<div class="panels">
            <div id="clientHistoryGrid"></div>
        </div>
        <div class="panels">
            <div id="depoHistoryGrid"></div>
        </div>
        <div class="panels">
            <div id="payHistoryGrid"></div>
        </div>*@
        <div class="panels">
            <div id="powerOfAttorneyGrid"></div>
        </div>
        <div class="panels">
            <div id="testamentaryDisposition"></div>
        </div>
    </div>


    @Html.Partial("~/Areas/Crkr/PartialView/Benef.cshtml")

    <div id="actual">
        <div id="toolbarActual"></div>
        <div id="deposit"></div>
    </div>
    <!--Вікно введення причини сторнування-->
    <div id="reasonWindow">
        <div id="window" class="contaiter">
            <form class="form-horizontal">
                <div class="col-xs-10">
                    <div class="form-group">
                        <div class="col-xs-7">
                            <input type="text" class="k-textbox" id="reason" name="reason" placeholder="Причина запиту">
                        </div>
                        <div class="col-xs-3">
                            <button type="button" id="canceled" class="k-button" style="width: 120px"><span class="k-sprite pf-icon pf-16 pf-arrow_left" style="margin-bottom: 3px"></span> Відправити</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


