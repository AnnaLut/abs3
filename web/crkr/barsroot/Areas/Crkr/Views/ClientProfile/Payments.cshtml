    <h4>Реєстр виплат на формування</h4>
    <form class="form-horizontal">
        <!--Ліва колонка значень-->
        <div class="col-md-5">
            <div class="form-group">
                <label for="" class="col-md-4 control-label">Кількість клієнтів:</label>
                <div class="col-md-8">
                    <input type="text" class="k-textbox" id="" readonly="readonly" value="Not Edit">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-md-4 control-label">Кількість платежів:</label>
                <div class="col-md-8">
                    <input type="text" class="k-textbox" id="" readonly="readonly" value="Not Edit">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-md-4 control-label">Загальна сума до зарахування:</label>
                <div class="col-md-8">
                    <input type="text" class="k-textbox" id="" readonly="readonly" value="Not Edit">
