<?xml version="1.0" encoding="utf-8" ?>
<xmlform captiontype="OnlyTitle">
  <grids>
    <grid table="CUSTOMER" id="gv" pagesize="5" showpagesizebox="true" title="Довідник контрагентів" showfilter="true">
      <rowselection method="SingleRow" />
      <filters buttontext="Пошук" caption="Фільтри" columnscount="2">
        <!--
        <filter id="f1" field="RNK" caption="RNK" columnindex="1" condition="Equal">
          <uicontrol type="IntegerInput" controlwidth="150"></uicontrol>
        </filter>
        -->
        <filter id="f2" field="NMK" caption="Назва" columnindex="2" condition="LikeRight">
          <uicontrol type="TextBox" controlwidth="250"></uicontrol>
        </filter>
        <filter id="f2" field="OKPO" caption="Ідентифікаційний код" columnindex="1" condition="LikeRight">
          <uicontrol type="TextBox" controlwidth="150"></uicontrol>
        </filter>
      </filters>
      <fields>
        <field name="RNK" key="true" datatype="Int64" sort="default">
          <column show="true" caption="Регістраційний номер" align="right" />
        </field>
        <field name="CUSTTYPE" key="false" datatype="Int64" sort="default">
          <column show="true" caption="Тип контрагента (1=БН,2=ЮЛ,3=ФЛ)" align="right" />
        </field>
        <field name="NMK" key="false" datatype="String" sort="default">
          <column show="true" caption="Назва контрагента" align="left" />
        </field>
        <field name="OKPO" key="false" datatype="String" sort="default">
          <column show="true" caption="Код ОКПО" align="left" />
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>
