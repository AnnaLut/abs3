<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Виберіть групу продуктів">
  <grids>
    <grid id="gBpkW4ProductGrp" table="w4_product_groups" pagesize="10" showpagesizebox="true">
      <datasource>
        <sql>
          select code, name
          from w4_product_groups
          where code not in ('INSTANT') -- убран 'LOCAL' по  COBUSUPABS-4290
          order by code
        </sql>
      </datasource>
      <buttons defaulttype="Button">
        <button id="btnDone" caption="Далі" hint="Продовжити реєстрацію картки">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=bpkw4.ref.proect">
            <parameters>
              <parameter type="QueryString" name="formname" altname="formname"></parameter>
              <parameter type="DataField" name="code" altname="grp_code"></parameter>
            </parameters>
          </command>
        </button>
      </buttons>
      <rowselection method="SingleRow"></rowselection>
      <fields>
        <field name="code" datatype="String" key="true">
          <column caption="Група продуктів" align="Left" width="200"></column>
        </field>
        <field name="name" datatype="String" sort="Asc">
          <column caption="Назва групи продуктів" align="Left" width="300"></column>
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>

