<?xml version="1.0" encoding="utf-8"?>
<xmlform captiontype="OnlyTitle" caption="РКО. Рахунки">
  <grids>
    <grid id="gRkoAccounts" table="v_rko_accounts" pagesize="10" showpagesizebox="true" title="РКО. Рахунки" showfilter="true">
      <buttons defaulttype="Button">
        <button id="btnRkoParams" caption="Параметри РКО" hint="Параметри РКО">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=rko.frm.params" checkselectedrow="false">
            <parameters>
              <parameter type="DataField" name="acc" altname="acc"></parameter>
            </parameters>
          </command>
        </button>
      </buttons>
      <rowselection method="SingleRow" />
      <fields>
        <field name="acc" key="true" datatype="Int64" sort="default">
          <column show="false" caption="ACC" align="right" />
        </field>
        <field name="nls" key="false" datatype="String" sort="default">
          <column show="true" caption="Рахунок" align="left" />
        </field>
        <field name="nmk" key="false" datatype="String" sort="Asc">
          <column show="true" caption="Клієнт" align="left" />
        </field>
        <field name="okpo" key="false" datatype="String" sort="Asc">
          <column show="true" caption="ЄДРПОУ" align="left" />
        </field>
        <field name="rnk" key="false" datatype="Int64" sort="default">
          <column show="true" caption="РНК" align="right" />
        </field>
        <field name="nd" key="false" datatype="String" sort="Asc">
          <column show="true" caption="Номер договору" align="left" />
        </field>
        <field name="daos" key="false" datatype="DateTime" sort="default">
          <column show="true" caption="Дата відкриття рахунку" align="center" />
        </field>
        <field name="dazs" key="false" datatype="DateTime" sort="default">
          <column show="true" caption="Дата закриття рахунку" align="center" />
        </field>
        <field name="branch" key="false" datatype="String" sort="default">
          <column show="true" caption="Відділення" align="left">
          </column>
        </field>
        <field name="exist_method" key="false" datatype="String" sort="default">
          <column show="false" caption="exist_method" align="right" />
          <layout>
            <colors scope="EntireRow">
              <color color="clBlue" operation="Equal" value="Заповнено"></color>
            </colors>
          </layout>
        </field>
        <field name="exist_tarif" key="false" datatype="String" sort="default">
          <column show="false" caption="exist_tarif" align="right" />
          <layout>
            <colors scope="EntireRow">
              <color color="clBlue" operation="Equal" value="Заповнено"></color>
            </colors>
          </layout>
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>