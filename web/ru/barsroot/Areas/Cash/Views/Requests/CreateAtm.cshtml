@{
    Layout = null;
}
@model BarsWeb.Areas.Cash.ViewModels.Request
<style>
    .form-group > div > input,
    .form-group > div > textarea,
    .form-group > div > .k-widget {
        margin-bottom: 5px;
        margin-top: 5px;
    }
    .form-group > div > textarea,
    .form-group > div > table textarea,
    .form-group > div > table input {
        margin-bottom: 5px;
    }
</style>
<script>
    $(function() {
        $("#MaxLoadLimit").kendoNumericTextBox({
            min: 0,
            max: 999999999999999,
            step: 1,
            format:'{0:n2}'
        });
    })
</script>

<div id="atmRequestForm">
    @if (Model.ID == 0 || Model.ID == null)
    {
        <h2>Створення нової заявки</h2>
    }
    else
    {
        <h2>Редагування заявки № @Model.ID</h2>
    }
    <div class="form-group">
        <input type="hidden" id="Id" value="@Model.ID" />
        <label class="control-label col-xs-4 col-sm-4">Код банкомату</label>
        <div class="col-xs-6 col-sm-6 col-md-6">
            <table style="width: 100%">
                <tr>
                    <td style="width: 100%">
                        <input id="AtmCode" rows="2" disabled="disabled" class="k-textbox" type="text" value="@ViewBag.AtmCode" />
                        <input type="hidden" id="AccountId" value="@Model.AccountId" />
                    </td>
                    <td style="vertical-align: top;">
                        @if (Model.ID == 0 || Model.ID == null)
                        {
                            <a class="k-button" onclick=" showAtmHandBook() ">
                                <i class="pf-icon pf-16 pf-book"></i>
                            </a>
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-4 col-sm-4">Валюта</label>
        <div class="col-xs-6 col-sm-6 col-md-6">
            <input id="CurrencyCode" disabled="disabled" class="k-textbox k-state-disabled" type="text"
                   @((Model.ID == 0 || Model.ID == null) ? "" : "value=" + Model.CurrencyCode) />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-4 col-sm-4">Рахунок</label>
        <div class="col-xs-6 col-sm-6 col-md-6">
            <input id="AccountNumber" rows="2" disabled="disabled" class="k-textbox k-state-disabled" type="text" value="@Model.PrivateAccount" />
        </div>
    </div>

    @*<div class="form-group">
        <label class="control-label col-xs-4 col-sm-4">Поточний ліміт</label>
        <div class="col-xs-6 col-sm-6 col-md-6">
            <input id="CurrentLimit" type="text" required validationMessage="Заповніть поточний ліміт" />
        </div>
    </div>*@
    <div class="form-group">
        <label class="control-label col-xs-4 col-sm-4">Ліміт максимального завантаження</label>
        <div class="col-xs-6 col-sm-6 col-md-6">
            <input id="MaxLoadLimit" type="text" required validationMessage="Заповніть максимальний ліміт завантаження" value="@Model.MaxLoadLimit.ToString().Replace(",",".")" />
        </div>
    </div>

</div>