}

<script src="~/lib/jsZip/jszip.js"></script>
<script src="~/Scripts/respond.min.js"></script>
<script src="~/Areas/Way4Bpk/Scripts/KendoCommon.js?v1.0"></script>
<script src="~/Areas/Way4Bpk/Scripts/Way4Bpk/NewCard.js?v1.1.6"></script>
