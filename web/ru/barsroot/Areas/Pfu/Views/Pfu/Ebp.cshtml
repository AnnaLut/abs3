            </div>

            @*<div class="col-md-6">
                <div class="form-group">
                    <label for="searchSeries"><b>Серія:</b></label>
                    <input type="text" class="form-control" id="searchSer" placeholder="Серія" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="searchNumber"><b>Номер:</b></label>
                    <input type="text" class="form-control" id="searchNumber" placeholder="Номер" />
