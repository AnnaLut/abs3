@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "Підтвердження відправки даних в ПФУ";
}
<script src="/barsroot/scripts/respond.min.js"></script>
<script src="~/Areas/Pfu/Scripts/Pfu/pfuBase.js"></script>
<script src="~/Areas/Pfu/Scripts/Pfu/pfuAccept.js"></script>

<h1>@ViewBag.Title</h1>

<div class="well">
    <h2 class="ra-well-title">Фільтр по реєстрам</h2>
    <div class="form-horizontal form-widgets col-sm-3">
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchDate"><b>Дата реєстру:</b></label>
            <div class="col-sm-8">
                <input type="text" id="searchDate" placeholder="Вкажіть дату реєстру" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchId"><b>ID реєстру:</b></label>
            <div class="col-sm-8">
                <input type="text" class="k-textbox" id="searchId" placeholder="Вкажіть ID реєстру" />
            </div>
        </div>
    </div>
    <div class="form-horizontal form-widgets col-sm-3">
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchState"><b>Статус реєстру:</b></label>
            <div class="col-sm-8">
                <input class="form-control" id="searchState" />
            </div>
        </div>
    </div>
    <div class="col-sm-6 bottom">
        <button  onclick="searchEnvelop()" type="button" class="btn btn-primary col-sm-2">
            <i class="fa fa-search"></i> Пошук
        </button>
    </div>
    <div class="clearfix"></div>
</div>

<div id="gridEnvelope"></div>
<script type="text/x-kendo-template" id="envelopeTitle-template">
    <div class="toolbar">
        <h2 style="margin: 5px">Перелік конвертів ПФУ</h2>
        <button id="approveMatching" class='k-button' onclick="approveMatching()">
            <i class="pf-icon pf-16 pf-ok"></i>
            Підтвердити відправку
        </button>
    </div>
</script>

<div id="gridCatalog"></div>
<script type="text/x-kendo-template" id="catalogTitle-template">
    <div class="toolbar">
        <h2 style="margin: 5px">Перелік файлів</h2>
        <button id="goToLines" class='k-button'>
            <i class="pf-icon pf-16 pf-arrow_right"></i>
            Перегляд вмісту файлу
        </button>
    </div>
</script>