
<xmlform captiontype="OnlyTitle">
  <grids>
    <grid table="TABVAL" id="gv" pagesize="10" showpagesizebox="true" title="Довідник валют" showfilter="true">

      <filters buttontext="Пошук" caption="Фільтри" columnscount="2" width="500">
        
        <filter caption="Код валюти" columnindex="1" field="KV" condition="LikeBoth" id="fltrKV">
          <uicontrol type="IntegerInput" ></uicontrol>
        </filter>

        <filter field="NAME" caption="Назва валюти" columnindex="2" condition="LikeBoth" id="fltrname">
          <uicontrol controlwidth="300"></uicontrol>
        </filter>
        
        <!--
        <filter caption="Назва валюти" columnindex="2" field="NAME" condition="LikeBoth"  id="fltrNAME">

        </filter>
        -->

        
      </filters>
      
      <rowselection method="SingleRow" />
      <fields>
        <field name="KV" key="true" datatype="Int64" sort="default">
          <column show="true" caption="Код" align="right" />
        </field>
        <field name="LCV" key="false" datatype="String" sort="default">
          <column show="true" caption="Букв. код" align="left" />
        </field>
        <field name="NAME" key="false" datatype="String" sort="default">
          <column show="true" caption="Назва" align="left" width="500" />
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>