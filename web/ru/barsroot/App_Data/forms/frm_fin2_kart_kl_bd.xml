    <grid id="Id3" title="Кредитні угоди клієнта" pagesize="5" showpagesizebox="true" >
      <datasource>
        <sql>
          select c.*, :okpo as okpo, :rnk1 as rnk1,  fin_zp.zn_vncrr(rnk, nd) as vncrr,
          FIN_NBU.ZN_P_ND('KKDP', 76, sysdate, ND, RNK, null) KKDP,
          null clas,
          FIN_NBU.ZN_P_ND('CLS',  76, sysdate, ND, RNK, null)  cls,
          FIN_NBU.ZN_P_ND('CLSP', 76, sysdate, ND, RNK, null) clsp,
          FIN_NBU.ZN_P_ND('PD',   76, sysdate, ND, RNK, null)   pd
          from v_fin_cc_deal c where c.rnk = :rnk1 and substr(prod,1,2) = '21'
        </sql>
        <parameters>
          <parameter name="OKPO" altname="okpo" datatype="Int64" masterid="Id1" masterkeyfield="OKPO" type="MasterGrid"></parameter>
          <parameter name="RNK1" altname="rnk1" datatype="Int64" masterid="Id1" masterkeyfield="RNK" type="MasterGrid"></parameter>
        </parameters>
      </datasource>
