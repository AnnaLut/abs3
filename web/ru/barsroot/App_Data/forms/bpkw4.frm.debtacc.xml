      <filters caption="Фільтри" buttontext="Застосувати" columnscount="2" width ="100%">
        <filter field="daos1" caption="Період З" columnindex="1" condition="GreatEqual" id="fltrdaos1" allowemptyvalue="false">
          <uicontrol type="DateInput" align="Center">
            <defaultvalue type="PlSqlFunction" value="sysdate"/>
          </uicontrol>
        </filter>
        <filter field="daos2" caption="Період ПО" columnindex="1" condition="LessEqual" id="fltrdaos2" allowemptyvalue="false">
