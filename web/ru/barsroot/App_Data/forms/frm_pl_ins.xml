<xmlform captiontype="OnlyTitle"  caption= "Виплата кредиту по платіжним інструкціям">
<grids>
  <grid id="tNlg"  pagesize="5" showpagesizebox="true"  title="Виплата кредиту по платіжним інструкціям"> 	 
       <datasource>
        <sql>
           SELECT S, REF, MFOB, NLSB, ID_B, NAM_B, NAZN, ND, ROWID RI
          FROM CCK_PL_INS where nd = :ND
        </sql>
        <parameters>
          <parameter name="ND" datatype="Int64" type="QueryString"></parameter>
        </parameters>
      </datasource>
    <rowselection method="SingleRowServer"/> 
    <buttons>
          <button caption="Сплатити" id="Bt2"   hint="Сплатити" type="Button">
        <command>
          <sql>
            begin
            CCK.PL_ins(:ND);
            end;
          </sql>
          <parameters>
            <parameter type="DataField" name="ND"></parameter>
          </parameters>
        </command>
      </button>
    </buttons>
    <editform style="Dialog" title="Введення суми" height="400" width="870" columnscount="3">
        <buttons defaulttype="button">
          <button id="btnEdit" caption="Редагувати|Зберегти|Вiдмiнити" hint="Редагувати рядок|Зберегти рядок|Вiдмiнити редагування" confirmmessage="">
            <command type="Edit">
              <sql>
                begin
                update CCK_PL_INS set  S = :S  where  ROWID = :RI and ND = :ND and REF IS NULL;
                commit;
                end;
              </sql>
              <parameters>
            <parameter type="DataField" name="S"></parameter>
            <parameter type="DataField" name="ND"></parameter>
            <parameter type="DataField" name="RI"></parameter>
              </parameters>
            </command>
          </button>
          <button caption="Закрити" id="btnClose">
            <command type="Close"/>
          </button>
         </buttons>
      </editform>
        <fields>
         <field name="S" key="false" sort="Default" datatype="Decimal">
          <column show="true" caption="Сума для перехування" align="Left"/>
               <form show="true"  rwmode="RW">
             <uicontrol type="Edit" >  </uicontrol>  <!--type="IntegerInput"  addemptyitem="true"-->
           </form>
         </field>
        <field name="REF" key="false" datatype="Int64" sort="default">
          <column show="true" caption="Реф.операц.~перерахування" align="Center">
          <link url="/barsroot/documentview/default.aspx">
             <parameters>
                <parameter name="REF" altname="ref" type="DataField" datatype="Int64"></parameter>
              </parameters>
            </link>
            </column>
           <form show="true">
            <uicontrol type="IntegerInput" readonly="true" />
          </form>
        </field>
        <field name="MFOB" key="false" datatype="String" sort="default">
          <column show="true" caption="МФО банку~отримувача " align="Right" width="200"/>
          <form show="true">
            <uicontrol type="Text" readonly="true" />
          </form>
        </field>
        <field name="NLSB" key="false" datatype="String" sort="default">
          <column show="true" caption="Рахунок~отримувача" align="Center" />
          <form show="true">
            <uicontrol type="Text" readonly="true" />
          </form>
        </field>
          <field name="ID_B" key="false" datatype="String" sort="default">
            <column show="true" caption="Ід.код~отримувача" align="right" />
            <form show="true">
              <uicontrol type="Text" readonly="true" />
            </form>
          </field>  
        <field name="NAM_B" key="false" datatype="String" sort="default">
          <column show="true" caption="Назва~отримувача" align="Left" width="400"/>
          <form show="true">
              <uicontrol type="Text" readonly="true" />
          </form>
        </field>
        <field name="NAZN" key="false" datatype="String" sort="default">
          <column show="true" caption="Призначення пл." align="right" />
          <form show="true">
            <uicontrol type="Text" readonly="true"/>
          </form>
        </field>
        <field name="ND" key="true" datatype="Int64" sort="default">
          <column show="false" caption="Реф КД" align="right" />
          <form show="true">
            <uicontrol type="IntegerInput" readonly="true" />
          </form>
        </field>
		<!-- <field name="ID" key="true" sort="Default" datatype="Int64">
          <column show="true" caption="" align="Left"/>
               <form show="true">
             <uicontrol type="IntegerInput" readonly="true"/>
           </form>
         </field>-->
     <field name="RI" key="true" sort="Default" datatype="String">
          <column show="false" caption="" align="Left"/>
               <form show="true">
             <uicontrol type="Text" readonly="true"/>
           </form>
         </field>
        </fields>
     </grid>
  </grids>

</xmlform>