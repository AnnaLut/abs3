  l_newtabid := bars_metabase.get_tabid('K9');
  l_newcolid := bars_metabase.get_colid(l_newtabid, 'K9');
  if (l_newtabid is not null and l_newcolid is not null) then
    bars_metabase.add_extrnval(l_tabid, 0, l_newtabid, l_newcolid, 'K', '', '', '');
  else
    dbms_output.put_line('В БМД не описана таблица K9 для описания сложного поля таблицы CCK_OB22.');
