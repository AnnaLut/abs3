@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "Редагування списку функцій Відкриття/Закриття дня";
}

<script src="~/Areas/Admin/Scripts/listSetCtrl.js"></script>
<link href="~/Areas/Admin/Css/listSet.css" rel="stylesheet">

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Доступні набори фукнкцій</h3>
    </div>
    <div class="panel-body" style="padding: 0px;">
        <div id="ListSetGrid"></div>
    </div>
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Налаштування набору</h3>
    </div>
    <div class="panel-body" style="padding: 0px;">
        <div id="panels">
            <div id="InUse"></div>
            <div id="commands">
                <div><a href="#" id="copyIn" class="k-button"><i class="fa fa-chevron-left"></i></a></div>
                <div><a href="#" id="copyOut" class="k-button"><i class="fa fa-chevron-right"></i></a></div>
                <div><a href="#" id="up" class="k-button"><i class="fa fa-chevron-up"></i></a></div>
                <div><a href="#" id="down" class="k-button"><i class="fa fa-chevron-down"></i></a></div>
                <!--
                <div><a href="#" id="add" class="k-button"><i class="fa fa-check-square-o"></i></a></div>
                <div><a href="#" id="drop" class="k-button"><i class="fa fa-times"></i></a></div>
                -->
            </div>
            <div id="OutUse"></div> 
        </div>
    </div>
</div>

<script type="text/x-kendo-template" id="addSet-template">
    <div class="toolbar">
        <button id="addSetBtn" class='btn btn-success'><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Додати</button>
    </div>
</script>

<div id="listSet-window">
    <form id="listSet-form">
        <table id="listSet-tbl" class="table">
            <tbody>
                <tr>
                    <td>SET NAME:</td>
                    <td><input id="name" style="width: 100%;" name="name" maxlength="50"/></td>
                </tr>
                <tr>
                    <td>SET COMMENT:</td>
                    <td><textarea id="comment" class="k-textbox" style="width: 100%;resize: none;" maxlength="100" rows="5" name="comment"></textarea></td>
                    <!--<td><input id="comment" style="width: 100%;" name="comment" maxlength="100" /></td>-->
                </tr>
                <tr>
                    <td style="border-width: inherit;"></td>
                    <td style="float: right; border-width: inherit;">
                        <button id="set-cencel" class="btn btn-danger" title="Відмінити"><i class="glyphicon glyphicon-remove"></i></button>
                        <button id="set-add" class="btn btn-info">Виконати</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>