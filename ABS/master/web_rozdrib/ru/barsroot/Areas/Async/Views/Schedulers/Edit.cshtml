@{
    ViewBag.Title = "";
    Layout = null;
}


<h2 ng-bind="schedulerWindowTitle()"></h2>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Код</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <input type="text" class="k-textbox" data-ng-model="scheduler.Code" />
    </div>
</div>
<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Тип</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <select kendo-drop-down-list style="width: 200px" data-ng-model="scheduler.Type">
            <option selected="selected" value="PLSQL">PLSQL</option>
            <option value="SQL">SQL</option>
            <option value="WEBUI">WEBUI</option>
        </select>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Назва</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <input type="text" class="k-textbox" data-ng-model="scheduler.Name"/>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Короткий опис</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <textarea rows="2" class="k-textbox" data-ng-model="scheduler.Description"></textarea>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Sql запит</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <textarea rows="4" class="k-textbox" data-ng-model="scheduler.SqlText"></textarea>
    </div>
</div>
