<?xml version="1.0" encoding="utf-8"?>
<nlog throwExceptions="false" internalLogFile="c:\nlog.log" internalLogLevel="Debug" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="NLog.Targets.GrowlNotify" />
  </extensions>
  <variable name="brief" value="${longdate} ${level} ${logger} : ${message}"/>
  <variable name="dblog" value="${longdate} ${logger} : ${message}"/>
  <variable name="verbose" value="${longdate}  ${machinename}  ${processid}  ${processname}  ${level}  ${logger} : ${message}"/>
  <variable name="exceptionVerbose" value="${brief} (${stacktrace:topFrames=10}) ${exception:format=ToString}" />
  <targets>
    <target name="log_event" xsi:type="EventLog" layout="${message} ${exception:format=tostring}" log="Application" source="Bars API" />
    <target name="log_file" xsi:type="File" layout="${verbose}" deleteOldFileOnStartup="False" concurrentWrites="true" KeepFileOpen="False" fileName="${basedir}/log/${shortdate}/web-${shortdate}.log" />
    <target name="log_growl" xsi:type="GrowlNotify" />
    <target name="log_database" xsi:type="Database" keepConnection="false" useTransactions="true"
                dbProvider="${connectionProviderName}"
                connectionStringName="ServerConnectionString"
                commandText="bars.bars_audit.write_message"
                commandType="StoredProcedure">
      <parameter name="@Loglevel" layout="${level:uppercase=true}" />
      <parameter name="@Message" layout="${dblog}" />
      <parameter name="@Machine" layout="${machinename}" />
    </target>
  </targets>
  <rules>
    <logger name="*" minLevel="Error" writeTo="log_database,log_event" />
    <logger name="*" minLevel="Trace" writeTo="log_database,log_file" />
    <logger name="*" minLevel="Trace" writeTo="log_growl" />
  </rules>
</nlog>