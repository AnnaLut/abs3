<!--Вікно пошуку одержувача-->
<div id="recipWindow">
    <div class="col-xs-10" style="width: 840px">
        <form id="usersForm">
            <div class="col-xs-5">
                <div class="form-group">
                    <label for="name" class="col-xs-4 control-label">ПІБ:</label>
                    <div class="col-xs-5">
                        <input type="text" class="k-textbox" id="name" name="name" placeholder="Прізвище ім'я та побатькові одержувача'" />
                    </div>
                </div>
            </div>
            <div class="col-xs-5">
                <div class="form-group">
                    <label for="inn" class="col-xs-4 control-label">ІНН:</label>
                    <div class="col-xs-5">
                        <input type="text" class="k-textbox" id="inn" name="inn" placeholder="ІНН" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="passplist" class="col-xs-2 control-label">Тип документу:</label>
                <div class="col-xs-8">
                    <input type="text" class="form-control" id="passplist" name="passplist" />
                </div>
            </div>
            <div class="col-xs-5">
                <div class="form-group" id="serial">
                    <label for="ser" class="col-xs-4 control-label">Серія:</label>
                    <div class="col-xs-5">
                        <input type="text" class="k-textbox" id="ser" name="ser" placeholder="Серія" />
                    </div>
                </div>
                <div class="form-group" id="eddr">
                    <label for="eddr_id" class="col-xs-4 control-label">ЄДДР:</label>
                    <div class="col-xs-5">
                        <input type="text" class="k-textbox" id="eddr_id" name="eddr_id" placeholder="Серія" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4"></div>
                    <div class="col-xs-5">
                        <button type="submit" class="k-button" id="searchUser" style="width: 145px"><span class="k-sprite pf-icon pf-16 pf-search" style="margin-bottom: 3px"></span> Знайти</button>
                    </div>
                </div>
            </div>
            <div class="col-xs-5">
                <div class="form-group">
                    <label for="numdoc" class="col-xs-4 control-label">Номер:</label>
                    <div class="col-xs-5">
                        <input type="text" class="k-textbox" id="numdoc" name="numdoc" placeholder="Номер" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4"></div>
                    <div class="col-xs-5">
                        <button type="button" class="k-button" id="newUser" style="width: 145px"><span class="k-sprite pf-icon pf-16 pf-add" style="margin-bottom: 3px"></span> Новий одержувач</button>
                    </div>
                </div>
            </div>

            <div class="col-xs-10" style="width: 840px">
                <div id="actualusers"></div>
            </div>
        </form>
    </div>
</div>

