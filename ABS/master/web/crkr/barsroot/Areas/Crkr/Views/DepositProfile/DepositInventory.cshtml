<div id="toolbarDepo"></div>
<div id="tabstripMain">
    <ul>
        <li>Вклад</li>
        <li>Документ</li>
        <li>Загальна інформація</li>
    </ul>
    <div class="panels">
        <div class="col-xs-11">
            <div class="form-group">
                <label for="FIO" class="col-xs-2 control-label">ПІБ Клієнта:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="FIO" name="FIO" placeholder="ПІБ"/>
                    <input type="hidden" id="depobdate" />
                </div>
            </div>
            <div class="form-group">
                <label for="ost" class="col-xs-2 control-label">Залишок:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="ost" placeholder="Залишок" />
                </div>
            </div>
            <div class="form-group">
                <label for="KKNAME" class="col-xs-2 control-label">Назва вкладу:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="KKNAME" placeholder="Назва вкладу" />
                </div>
            </div>
            <div class="form-group">
                <label for="reasonDepo" class="col-xs-2 control-label">Причина блокування:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="reasonDepo" name="reasonDepo" placeholder="Причина блокування" />
                </div>
            </div>
            <div class="form-group">
                <label for="ob22" class="col-xs-2 control-label">OB22:</label>
                <div class="col-xs-8">
                    <input class="form-control" id="ob22" name="ob22" placeholder="OB22" />
                </div>
            </div>
            <div class="form-group">
                <label for="NSC" class="col-xs-2 control-label">Номер рахунку:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="NSC" placeholder="Номер рахунку" />
                </div>
            </div>
        </div>
    </div>
    <div class="panels">
        <div class="demo-section k-content">
            @*<h4><strong>Спадкоємець:</strong></h4>*@
            <h4>Спадкоємець:</h4>
            <ul class="fieldlist">
                <li>
                    <input type="radio" name="heir" id="heirPerson" class="k-radio" value="0" onclick="changeRadio();">
                    <label class="k-radio-label" for="heirPerson">Фізична особа</label>
                </li>
                <li>
                    <input type="radio" name="heir" id="heirCompany" class="k-radio" value="1" onclick="changeRadio();">
                    <label class="k-radio-label" for="heirCompany">Юридична особа</label>
                </li>
            </ul>
        </div>
        <form id="document">
            <div class="form-group" id="doc">
                <label class="col-xs-2 control-label">Тип документа:</label>
                <div class="col-xs-5">
                    <input class="form-control" id="docTypeDropList" name="doctype" placeholder="Тип документа" required />
                </div>
                <label class="col-xs-3 nonsight-label" id="newDocTypeDropList"></label>
            </div>
            <div class="form-group" id="serial">
                <label for="docserial" class="col-xs-2 control-label">Серія:</label>
                <div class="col-xs-5">
                    <input type="text" class="k-textbox" id="docserial" name="docserial" placeholder="Серія"/>
                </div>
                <label class="col-xs-3 nonsight-label" id="newdocserial"></label>
            </div>
            <div class="form-group" id="numb">
                <label for="docnumber" class="col-xs-2 control-label">Номер:</label>
                <div class="col-xs-5">
                    <input type="text" class="k-textbox" id="docnumber" name="docnumber" placeholder="Номер" required />
                </div>
                <label class="col-xs-3 nonsight-label" id="newdocnumber"></label>
            </div>
            <div class="form-group" id="dateout">
                <label for="docdate" class="col-xs-2 control-label">Коли виданий:</label>
                <div class="col-xs-5">
                    <input type="date" class="datepicker" id="docdate" name="docdate" placeholder="Коли виданий" required />
                </div>
                <label class="col-xs-3 nonsight-label" id="newdocdate"></label>
            </div>
            <div class="form-group" id="organiz">
                <label for="docorg" class="col-xs-2 control-label">Ким виданий:</label>
                <div class="col-xs-5">
                    <input type="text" class="k-textbox" id="docorg" name="docorg" placeholder="Ким виданий" required />
                </div>
                <label class="col-xs-3 nonsight-label" id="newdocorg"></label>
            </div>

            <div class="form-group" id="namePerson">
                <label for="docNameCompany" class="col-xs-2 control-label">Назва юр.особи:</label>
                <div class="col-xs-5">
                    <input type="text" class="k-textbox" id="docNameCompany" name="name_person" placeholder="Назва юр.особи"/>
                </div>
                <label class="col-xs-3 nonsight-label" id="newdocNameCompany"></label>
            </div>
            <div class="form-group" id="edrpo">
                <label for="docCodCompany" class="col-xs-2 control-label">ЄДРПОУ:</label>
                <div class="col-xs-5">
                    <input type="text" class="k-textbox" id="docCodCompany" name="edrpo_person" placeholder="ЄДРПОУ" />
                </div>
                <label class="col-xs-3 nonsight-label" id="newdocCodCompany"></label>
            </div>

            <div class="form-group">
                <div class="col-xs-2"></div>
                <div class="col-xs-8">
                    <button type="button" class="k-button k-primary" id="saveDoc">Зберегти</button>
                </div>
            </div>
        </form>
    </div>
    <div class="panels">
        <div class="col-xs-11">
            <div class="form-group">
                <label for="dato" class="col-xs-2 control-label">Дата книжки:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="dato" placeholder="Дата книжки" />
                </div>
            </div>
            <div class="form-group">
                <label for="registrydate" class="col-xs-2 control-label">Дата договору:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="registrydate" placeholder="Дата договору" />
                </div>
            </div>
            <div class="form-group">
                <label for="datl" class="col-xs-2 control-label">Дата видачі:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="datl" placeholder="Дата видачі" />
                </div>
            </div>
            <div class="form-group">
                <label for="attorney" class="col-xs-2 control-label">Спадщина:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="attorney" placeholder="Спадщина" value="Не отримана" />
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-xs-2 control-label">Дата валютування:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="datval" placeholder="Дата валютування" />
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-xs-2 control-label">Дата виплат:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="datpay" placeholder="Дата виплат" />
                </div>
            </div>
            <div class="form-group">
                <label for="percent" class="col-xs-2 control-label">Ставка, %:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="percent" placeholder="Ставка, %" />
                </div>
            </div>
            <div class="form-group">
                <label for="branch" class="col-xs-2 control-label">Код відділення:</label>
                <div class="col-xs-8">
                    <input type="text" class="k-textbox" id="branch" placeholder="Код відділення" />
                </div>
            </div>
            <div class="form-group">
                <label for="mfo" class="col-xs-2 control-label">МФО:</label>
                <div class="col-xs-8">
                    <input class="form-control" name="mfo" id="mfo" placeholder="МФО" />
                </div>
            </div>
        </div>
    </div>
</div>
