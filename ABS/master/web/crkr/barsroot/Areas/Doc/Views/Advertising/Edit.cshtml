<h2 ng-bind="editorTitle()"></h2>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Назва</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <input type="text" class="k-textbox" data-ng-model="advertising.Name" required validationmessage="Заповніть назву" />
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Період дії</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <div style="margin-bottom: 10px">
            <span style="padding-right: 10px">з</span>
            <input id="dateBegin" type="text" k-ng-model="advertising.DateBegin" kendo-date-time-picker="dateBegin" k-options="dateBeginOptions" />
        </div>
        <div>
            <span>по</span>
            <input id="dateEnd" type="text" k-ng-model="advertising.DateEnd" kendo-date-time-picker="dateEnd" k-options="dateEndOptions" />
        </div>
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Признак активності</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <input type="checkbox" data-ng-model="advertising.IsActive" ng-true-value="Y" ng-false-value="N" />
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Довільний опис</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <textarea rows="2" class="k-textbox" type="text" data-ng-model="advertising.Description"></textarea>
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Відділення</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <table style="width: 100%">
            <tr>
                <td style="width: 100%">
                    <textarea rows="2" disabled="disabled" class="k-textbox" type="text" data-ng-model="advertising.BranchList"></textarea>
                </td>
                <td style="vertical-align: top;">
                    <a class="k-button" ng-click="showBranchHandBook()">
                        <i class="pf-icon pf-16 pf-book"></i>
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Список операцій</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <table style="width: 100%">
            <tr>
                <td style="width: 100%">
                    <textarea rows="2" disabled="disabled" class="k-textbox" type="text" data-ng-model="advertising.TransactionCodeList"></textarea>
                </td>
                <td style="vertical-align: top;">
                    <a class="k-button" ng-click="showTtsHandBook()">
                        <i class="pf-icon pf-16 pf-book"></i>
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Признак рек. по замовч.</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <input type="checkbox" data-ng-model="advertising.IsDefault" ng-true-value="Y" ng-false-value="N" />
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Розміри блоку</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        ширина:
        <input kendo-numeric-text-box k-min="0" k-max="10000" k-ng-model="advertising.Width" k-options="{format: '0',min:0,max:10000}" style="width: 100px" />
        висота:
        <input kendo-numeric-text-box k-min="0" k-max="10000" k-ng-model="advertising.Height" k-options="{format: '0',min:0,max:10000}" style="width: 100px" />
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-4 col-sm-4">Рекламне повідомлення</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <div ng-hide="advertising.Id == null">
            <label><input type="radio" data-ng-model="advertising.Type" value="1" /> HTML</label>
            <label><input type="radio" data-ng-model="advertising.Type" value="2" /> Картинка</label>
        </div>
    </div>
</div>

<div class="form-group" ng-show="advertising.Type == 1">
    <label class="control-label col-xs-4 col-sm-4"></label>
    <div class="col-xs-11 col-sm-11 col-md-11">
        <textarea data-kendo-editor="advertisingEditor" data-options="editorOptions" rows="7" data-ng-model="advertising.DataBodyHtml" style="height: 100px"></textarea>
    </div>
</div>
<div data-kendo-window="imageEditorWindow" data-options="imageEditorWindowOptions" style="display: none"></div>
<iframe ng-show="(advertising.Type == 2)" ng-src="{{ advertising.Id == null ? ' ' : '/barsroot/doc/advertising/fileupload/' + advertising.Id }}" border="0" style="border: 1px solid gray;width: 100%;height: 230px;"></iframe>

<div class="window-footer">
    <button type="button" class="k-primary k-button" data-ng-click="save()"><i class="pf-icon pf-16 pf-save"></i> Зберегти</button>
    <button type="button" class="k-button" data-ng-click="advertisingWindow.close()">Відмінити</button>
</div>


