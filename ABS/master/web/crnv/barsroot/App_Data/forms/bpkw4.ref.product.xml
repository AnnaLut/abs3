<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Виберіть продукт">
  <grids>
    <grid id="gBpkW4Product" table="w4_product" pagesize="5" showpagesizebox="true">
      <datasource>
        <sql>
          select unique proect_id, product_code, product_name, grp_code,
                 acc_rate, mobi_rate, cred_rate, ovr_rate, lim_rate, grc_rate
          from v_w4_product
          where proect_id = :proect_id and grp_code = :grp_code
        </sql>
        <parameters>
          <parameter type="QueryString" name="proect_id" datatype="Int64"></parameter>
          <parameter type="QueryString" name="grp_code" datatype="String"></parameter>
        </parameters>
      </datasource>
      <buttons defaulttype="Button">
        <button id="btnDone" caption="Далі" hint="Продовжити реєстрацію картки">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=bpkw4.ref.card">
            <parameters>
              <parameter type="QueryString" name="formname" altname="formname"></parameter>
              <parameter type="DataField" name="proect_id" altname="proect_id"></parameter>
              <parameter type="DataField" name="product_code" altname="product_code"></parameter>
            </parameters>
          </command>
        </button>
      </buttons>
      <rowselection method="SingleRow"></rowselection>
      <fields>
        <field name="proect_id" datatype="Int64" key="true">
          <column caption="Код З/П проекту" align="Left" show="false"></column>
        </field>
        <field name="product_code" datatype="String" key="true">
          <column caption="Продукт" align="Left" width="200"></column>
        </field>
        <field name="product_name" datatype="String" sort="Asc">
          <column caption="Назва продукту" align="Left" width="300"></column>
        </field>
        <field name="grp_code" datatype="String">
          <column caption="Група продуктів" align="Left" show="false"></column>
        </field>
        <field name="acc_rate" datatype="String">
          <column caption="Відсоток на залишок по рахунку" align="Right" width="100"></column>
        </field>
        <field name="mobi_rate" datatype="String">
          <column caption="Відсоток на 'Мобільні заощадження'" align="Right" width="100"></column>
        </field>
        <field name="cred_rate" datatype="String">
          <column caption="Відсоток за кредитом" align="Right" width="100"></column>
        </field>
        <field name="ovr_rate" datatype="String">
          <column caption="Відсоток на недозв. овердрафт" align="Right" width="100"></column>
        </field>
        <field name="lim_rate" datatype="String">
          <column caption="Відсоток за невикорист. ліміт" align="Right" width="100"></column>
        </field>
        <field name="grc_rate" datatype="String">
          <column caption="Відсоток за корист.кред. у Грейс-період" align="Right" width="100"></column>
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>

