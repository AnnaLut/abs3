<?xml version="1.0" encoding="utf-8"?>
<xmlform captiontype="OnlyTitle" caption="Національни картки">
  <grids>
    <grid table="w4_local_card" id="gLocalCard" pagesize="10" showpagesizebox="true" title="Way4. Національні картки" showfilter="true">
      <filters caption="Пошук картки" buttontext="Знайти" columnscount="2" width ="100%">
        <filter field="nls" caption="Картковий рахунок" columnindex="1" condition="Equal" id="fltrnls" >
          <uicontrol></uicontrol>
        </filter>
        <filter field="nmk" caption="Клієнт" columnindex="2" condition="LikeBoth" id="fltrnmk">
          <uicontrol></uicontrol>
        </filter>
      </filters>
      <buttons defaulttype="Button">
        <button id="btnRequest" caption="Сформувати запит" hint="Сформувати запит" >
          <command type="PlSqlBlock" successmessage="Сформовано запит">
            <sql>
              begin
              bars_owcrv.form_request(:ID,:ND);
              end;
            </sql>
            <parameters>
              <parameter type="DataField" name="ND"></parameter>
            </parameters>
            <customfields title="Виберіть запит" oktext="Сформувати запит" canceltext="Відмінити">
              <customfield name="ID" datatype="Int64">
                <uicontrol type="DropDownList" table="v_ow_crv_request" keyfield="id" valuefield="name" addemptyitem="true">
                </uicontrol>
              </customfield>
            </customfields>
          </command>
        </button>
        <button id="btnRequestHist" caption="Архів запитів" hint="Архів запитів">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=bpkw4.frm.requesthistory">
            <parameters>
              <parameter type="DataField" name="ACC" altname="acc">
              </parameter>
            </parameters>
          </command>
        </button>
      </buttons>
      <rowselection method="SingleRowServer" />
      <fields>
        <field name="ND" key="true" datatype="Int64" sort="Desc">
          <column show="true" caption="Номер договору" align="right" />
          <form show="false" rwmode="RW" required="true">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="BRANCH" key="false" datatype="String" sort="default">
          <column show="true" caption="Відділення" align="left" />
          <form show="false" rwmode="RW" required="true">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="ACC" key="true" datatype="Int64" sort="default">
          <column show="false" caption="ACC" align="right" />
          <form show="false" rwmode="RW" required="true">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="NLS" key="false" datatype="String" sort="default">
          <column show="true" caption="Картковий рахунок" align="left" />
          <form show="false" rwmode="RW" required="true">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="KV" key="false" datatype="Int64" sort="default">
          <column show="false" caption="KV" align="right" />
          <form show="false" rwmode="RW" required="true">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="DAOS" key="false" datatype="DateTime" sort="default">
          <column show="true" caption="Дата відкриття" align="center" />
          <form show="false" rwmode="RW" required="true">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="RNK" key="true" datatype="Int64" sort="default">
          <column show="true" caption="РНК" align="right" />
          <form show="false" rwmode="RW">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="OKPO" key="false" datatype="String" sort="default">
          <column show="true" caption="ЗКПО" align="left" />
          <form show="false" rwmode="RW">
            <uicontrol type="Text" />
          </form>
        </field>
        <field name="NMK" key="false" datatype="String" sort="default">
          <column show="true" caption="ПІБ клієнта" align="left" />
          <form show="false" rwmode="RW">
            <uicontrol type="Text" />
          </form>
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>