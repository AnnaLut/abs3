        </button>
        <button caption="Далі" hint="Далі" id="btnNext">
          <command type="PlSqlBlock" successurl="/barsroot/barsweb/dynform.aspx?form=frm_dep_broken_period_new_search"  target="Self" >
            <sql>
              begin
                null;
              end;
            </sql>
           <parameters>
             <parameter type="QueryString" datatype="String" name="dep_num" add2successurl="true"></parameter>
             <parameter type="QueryString" datatype="String" name="dep_date" add2successurl="true"></parameter>
             </parameters> 
          </command> 
        </button>
      </buttons>
