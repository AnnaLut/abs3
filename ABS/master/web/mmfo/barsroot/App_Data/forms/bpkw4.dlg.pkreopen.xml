<?xml version="1.0" encoding="utf-8"?>
<xmlform captiontype="OnlyTitle" caption="Підтвердження запиту">
  <grids>
    <grid id="gReOpen" pagesize="10" title="Перевипуск карток">
      <datasource>
        <sql>
          select card_acct, nls, kv, nmk 
          from obpc_w4 w
          where exists (select 1 from bpk_pktow4 where nd = w.nd and id=user_id)
        </sql>
      </datasource>
      <buttons defaulttype="Button">
        <button id="btnReOpen" caption="Виконати перевипуск" hint="Виконати перевипуск">
          <command type="PlSqlBlock" successmessage="Виконано перевипуск карток" checkselectedrow="false" successurl="/barsroot/barsweb/dynform.aspx?form=bpkw4.frm.pkreopen">
            <sql>
              begin
              bars_ow.pk_reopen_card(:card_code, :proect_id);
              end;
            </sql>
            <parameters>
              <parameter type="QueryString" name="card_code" datatype="String" ></parameter>
              <parameter type="QueryString" name="proect_id" datatype="Int64"></parameter>
            </parameters>
          </command>
        </button>
        <button id="btnExit" caption="Відмінити" hint="Відмінити">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=bpkw4.frm.pkreopen"></command>
        </button>
      </buttons>
      <rowselection method="SingleRow"/>
      <fields>
        <field name="card_acct" key="false" datatype="String" sort="Default">
          <column show="true" caption="Технічний рахунок" align="Left" />
        </field>
        <field name="nls" key="false" datatype="String" sort="Default">
          <column show="true" caption="Картковий рахунок" align="Left" />
        </field>
        <field name="kv" key="false" datatype="Int64" sort="Default">
          <column show="true" caption="Вал." align="Right" />
        </field>
        <field name="nmk" key="false" datatype="String" sort="Default">
          <column show="true" caption="ПІБ (назва) клієнта" align="Left" />
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>