<button caption="Графік платежів" hint="Перегляд графіку платежів по договору" id="bched" >
  <command type="Redirect" checkselectedrow="true" url="dynform.aspx?form=frm_ins_pay_sched">
    <parameters>
      <parameter datatype="Int64" name="ID" altname="deal_id" type="DataField"></parameter>
    </parameters>
  </command>
</button>
<button caption="Перезаключити договір" confirmmessage="Підтвердіть перехід до картки перезаключення договору" hint="Перезаключити відмічений договір" id="bre" >
  <command type="Redirect" checkselectedrow="true" url="dynform.aspx">
    <parameters>
      <parameter datatype="String" name="form" type="DataField"></parameter>
      <parameter datatype="Int64" name="ID" altname="deal_id" type="DataField"></parameter>
    </parameters>
  </command>
</button>
<button caption="Закрити договір" confirmmessage="Договір буде закрито. Підтвердіть операцію" hint="Закрити вибраний договір" id="btnClose" >
  <command type="PlSqlBlock" checkselectedrow="true" successmessage="Договір закрито">
    <sql>
      begin ins_pack.close_deal(:ID); end;
    </sql>
    <parameters>
      <parameter type="DataField" name="ID"></parameter>
    </parameters>
  </command>
</button>

