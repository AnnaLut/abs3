<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Виберіть зарплатний проект">
  <grids>
    <grid id="gBpkW4Proect" pagesize="10" showpagesizebox="true">
      <filters caption="Пошук зарплатного проекту" buttontext="Знайти" columnscount="2" width="100%">
        <filter field="okpo" caption="ЗКПО" columnindex="1" condition="Equal" id="fltrokpo">
          <uicontrol></uicontrol>
        </filter>
        <filter field="name" caption="Назва проекту" columnindex="2" condition="LikeBoth" id="fltrname">
          <uicontrol></uicontrol>
        </filter>
      </filters>
      <datasource>
        <sql>
          select id, name, okpo, product_code, product_name, grp_code
          from v_bpk_proect
          where grp_code = :grp_code
        </sql>
        <parameters>
          <parameter type="QueryString" name="grp_code" datatype="String"></parameter>
        </parameters>
      </datasource>
      <buttons defaulttype="Button">
        <button id="btnDone" caption="Далі" hint="Продовжити реєстрацію картки">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=bpkw4.ref.product">
            <parameters>
              <parameter type="QueryString" name="formname" altname="formname"></parameter>
              <parameter type="DataField" name="id" altname="proect_id"></parameter>
              <parameter type="DataField" name="grp_code" altname="grp_code"></parameter>
            </parameters>
          </command>
        </button>
      </buttons>
      <rowselection method="SingleRow"></rowselection>
      <fields>
        <field name="id" datatype="Int64" key="true">
          <column caption="Код" align="Right" width="50"></column>
        </field>
        <field name="okpo" datatype="String">
          <column caption="ЗКПО" align="Left" width="100"></column>
        </field>
        <field name="name" datatype="String">
          <column caption="Назва" align="Left" width="400"></column>
        </field>
        <field name="product_code" datatype="String" key="true">
          <column caption="Продукт" align="Left" show="false"></column>
        </field>
        <field name="product_name" datatype="String">
          <column caption="Назва продукту" align="Left" show="false"></column>
        </field>
        <field name="grp_code" datatype="String" key="true">
          <column caption="Продукт" align="Left" show="false"></column>
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>
