<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Довідник відділень РУ">
  <grids>
    <grid id="gBranch" pagesize="10">
      <filters caption="Пошук відділення" buttontext="Знайти" columnscount="1" width ="100%">
        <filter field="ru_code" caption="РУ" columnindex="1" condition="Equal" id="fltrru" >
          <uicontrol type="DropDownList" table="v_branch8_obu" keyfield="ru_code" valuefield="ru_name" addemptyitem="true"></uicontrol>
        </filter>
      </filters>
      <datasource>
        <sql>
          select branch, name, ru_code, ru_name from v_branch_obu where length(branch)>=15 order by branch
        </sql>
      </datasource>
      <fields>
        <field name="branch" datatype="String" key="true" sort="Asc">
          <column caption="Відділення" align="Left"></column>
        </field>
        <field name="name" datatype="String">
          <column caption="Назва" align="Left"></column>
        </field>
        <field name="ru_code" datatype="String">
          <column caption="Код РУ" align="Right" show="false"></column>
        </field>
        <field name="ru_name" datatype="String">
          <column caption="Назва РУ" align="Left" show="false"></column>
        </field>
      </fields>
      <rowselection method="SingleRow"></rowselection>
    </grid>
  </grids>
</xmlform>
