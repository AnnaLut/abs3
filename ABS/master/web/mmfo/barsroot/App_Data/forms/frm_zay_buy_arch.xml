<xmlform captiontype="OnlyTitle">
  <grids>
    <grid id="gv" pagesize="10" showpagesizebox="true" title="Архів заявок на КУПІВЛЮ валюти" showfilter="true" >
      <editform style="Dialog" title="" height="600" width="800" columnscount="1"> </editform>

      <filters caption="Фільтри" width="100%" buttontext="Пошук" columnscount="3">
        <filter caption="№ заявки" columnindex="1" field="ID" condition="Equal" id="fltrID">
          <uicontrol type="TextBox"></uicontrol>
        </filter>
        <filter caption="Код валюти" columnindex="2" field="KV2"  condition="Equal" id="fltrKV2">
          <uicontrol controlwidth="100" type="ReadOnlyReference" formname="/common/frm_ref_tabval" formfieldname="KV" valueformat="{0:D}" addemptyitem="true"  formwidth="600"> </uicontrol>
        </filter>
        <filter caption="Дата заявки" columnindex="3" field="FDAT" condition="Equal" id="fltrFDAT">
          <uicontrol type="DateInput"> </uicontrol>
        </filter>
        <filter caption="Рег. № клієнта" columnindex="1" field="RNK"  condition="Equal" id="fltrRNK">
          <uicontrol controlwidth="100" type="ReadOnlyReference" formname="/common/frm_ref_customer" formfieldname="RNK" addemptyitem="true"  formwidth="600"> </uicontrol>
        </filter>
        <filter caption="Відділення" columnindex="2" field="CUST_BRANCH"  condition="Equal" id="fltrCB">
          <uicontrol controlwidth="100" type="ReadOnlyReference" formname="/common/frm_ref_branches" formfieldname="BRANCH" addemptyitem="true"  formwidth="600"> </uicontrol>
        </filter>
        <filter caption="Найменування клієна" columnindex="3" field="NMK"  condition="Equal" id="fltrNMK">
          <uicontrol controlwidth="100" type="ReadOnlyReference" formname="/common/frm_ref_customer" formfieldname="NMK" addemptyitem="true"  formwidth="600"> </uicontrol>
        </filter>
       </filters>
      <datasource>
        <sql>
          SELECT v_zay.dk, v_zay.id, v_zay.ref, v_zay.kv2, v_zay.s2,  v_zay.s2/100 s2s,
          v_zay.rnk, v_zay.nd_rnk, v_zay.cust_branch, v_zay.nmk,
          v_zay.fdat, v_zay.kurs_z, v_zay.kurs_f,   v_zay.S2* v_zay.KURS_F/100 GRN_SUM,  v_zay.priorname, v_zay.kom, v_zay.skom, v_zay.vdate,
          o.sos, v_zay.dig,  decode(o.sos,-1, 'сторнована',0,'очікує візу', 'оплачена')  sos2
          FROM v_zay, oper o, sos s
          WHERE v_zay.ref = o.ref  and v_zay.dk = 1 and o.sos = s.sos
          ORDER BY o.ref desc
        </sql>
      </datasource>
      <rowselection method="SingleRow"/>
      <buttons>
        <button caption="Друк заявки"  hint="Сформувати друковану форму заявки" id="btnrep"  type="Image" imagename="printer"   >
          <command type="FastReport" frtemplate="zay_buy" checkselectedrow="true" target="blank" datakeynames="SOS" >
            <parameters>
              <parameter type="DataField" name="ID" altname="ZAY_ID"></parameter>
            </parameters>
          </command>
        </button>
        
          <button id="BT1" type="Image" caption="Перегляд" imagename="folder" hint="Перегляд заявки">
            <command type="Redirect" url="/barsroot/documentview/default.aspx" target="Blank" >
              <parameters>
                <parameter name="REF" altname="REF" type="DataField"></parameter>
              </parameters>
            </command>
          </button>
      </buttons>
      <fields>
        <field name="ID" key="true" datatype="String" sort="Default">
          <column show="true" caption="№ заявки" align="Right" />
        </field>
        <field name="REF" key="true" datatype="Int64" sort="Asc">
          <column show="true" caption="Реф операції" align="Right" />
       </field>
        <field name="KV2" key="false" datatype="Int64" sort="default">
          <column show="true" caption="Код валюти" align="Right" />
       </field>
        <field name="RNK" key="false" datatype="String" sort="default">
          <column show="true" caption="Рег. номер клієнта" align="Right" />
       </field>
        <field name="CUST_BRANCH" key="false" datatype="String" sort="default">
          <column show="true" caption="Відділення клієнта" align="Left" />
       </field>
        <field name="NMK" key="false" datatype="String" sort="default">
          <column show="true" caption="Найменування клієнта" align="Left" />
       </field>
        <field name="FDAT" key="false" datatype="DateTime" sort="default">
          <column show="true" caption="Дата заявки" align="Center" />
       </field>
        <field name="S2S" key="false" datatype="Decimal" sort="default">
          <column show="true" caption="Сума заявленої валюти" align="Right" />
       </field>
        <field name="KURS_Z" key="false" datatype="Decimal" sort="default">
          <column show="true" caption="Курс кл" formatstring="{0:F8}" align="Right" />
       </field>
        <field name="KURS_F" key="false" datatype="Decimal" sort="default">
          <column show="true" caption="Курс діл" formatstring="{0:F8}" align="Right" />
       </field>
        <field name="GRN_SUM" key="false" datatype="Decimal" sort="default">
          <column show="true" caption="ГРН еквівалент по курсу дилера" align="Right" />
       </field>
        <field name="PRIORNAME" key="false" datatype="String" sort="default">
          <column show="true" caption="Пріорітет заявки" align="Left" />
       </field>
        <field name="KOM" key="false" datatype="String" sort="default">
          <column show="true" caption="% ком" align="Right" />
       </field>
        <field name="SKOM" key="false" datatype="String" sort="default">
          <column show="true" caption="або сума" align="Right" />
       </field>
        <field name="VDATE" key="false" datatype="DateTime" sort="default">
          <column show="true" caption="Дата валютування" align="Center" />
       </field>
        <field name="SOS2" key="false" datatype="String" sort="default">
          <column show="true" caption="Стан заявки" align="Right" />
        
            
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>