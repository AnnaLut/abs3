<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Виберіть картку">
  <grids>
    <grid id="gBpkW4Card" pagesize="10" showpagesizebox="true">
      <datasource>
        <sql>
          select proect_id, product_code, card_code, sub_name, kv, nbs, ob22,
          FLAG_KK card_kiev
          from v_w4_product
          where proect_id=:proect_id and product_code=:product_code
        </sql>
        <parameters>
          <parameter type="QueryString" name="proect_id" datatype="Int64"></parameter>
          <parameter type="QueryString" name="product_code" datatype="String"></parameter>
        </parameters>
      </datasource>
      <buttons defaulttype="Button">
        <button id="btnDone" caption="Далі" hint="Продовжити реєстрацію картки">
          <command type="Redirect" url="/barsroot/barsweb/dynform.aspx?form=\QS[formname]">
            <parameters>
              <parameter type="DataField" name="proect_id" altname="proect_id"></parameter>
              <parameter type="DataField" name="card_code" altname="card_code"></parameter>
              <parameter type="DataField" name="card_kiev" altname="card_kiev"></parameter>
              <parameter type="QueryString" name="frm_id" altname="frm_id"></parameter>
            </parameters>
          </command>
        </button>
      </buttons>
      <rowselection method="SingleRow"></rowselection>
      <fields>
        <field name="card_kiev" datatype="Int64" key="true">
          <column caption="Карта киянина" align="Left" show="false"></column>
        </field>        
        <field name="proect_id" datatype="Int64" key="true">
          <column caption="Код проекту" align="Right" show="false"></column>
        </field>
        <field name="product_code" datatype="String">
          <column caption="Продукт" align="Left" show="false"></column>
        </field>
        <field name="card_code" datatype="String" key="true">
          <column caption="Код картки" align="Left" width="200"></column>
        </field>
        <field name="sub_name" datatype="String" sort="Asc">
          <column caption="Картка" align="Left" width="300"></column>
        </field>
        <field name="kv" datatype="String">
          <column caption="Вал" align="Center"></column>
        </field>
        <field name="nbs" datatype="String">
          <column caption="БР" align="Center"></column>
        </field>
        <field name="ob22" datatype="String">
          <column caption="ОБ22" align="Left"></column>
        </field>
      </fields>
    </grid>
  </grids>
</xmlform>

