@{
    Layout = null;
    //ViewBag.Title = "";
}
<div ng-controller="Credit.dataMaturityCtrl" style="width: 100%">
    <table>
        <tr>
            <td>
                <label>Шблон погашення рахунку "SG"</label>
            </td>
            <td>
                <select kendo-drop-down-list name="ddlRang" id="ddlRang" style="width: 400px" k-ng-model="credit.rangValue" k-options="ddlRangOptions"></select>
            </td>
        </tr>
        <tr>
            <td>
                <div class="panel panel-default" style="display: inline-flex;width:100%;height:300px">
                    <div class="panel-body">
                        <div class="form-group">
                            <label><b>Погашення основного боргу</b></label>
                            <table>
                                <tr>
                                    <td colspan="2">
                                        <label>Періодичність</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <select kendo-drop-down-list name="ddlFreq" id="ddlFreq" style="width: 150px" k-ng-model="credit.freqValue" k-options="ddlFreqOptions"></select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label>День</label>
                                    </td>
                                    <td>
                                        <label>Перша платіжна дата</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="text" name="tbDayOfPay" id="tbDayOfPay" ng-model="credit.dayOfPayValue" class="k-textbox" style="width: 100px" data-dayofpay-msg="Не коректно введено день погашення" />
                                    </td>
                                    <td>
                                        <input kendo-date-picker name="dpFirtsPayDate" id="dpFirtsPayDate" k-ng-model="credit.firstPayDateValue" 
                                               k-options="dpDateFormatOptions" data-firstpaydate-msg="Дата погашення менше дати видачі" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <input type="checkbox" ng-model="credit.holidayValue" id="chkHoliday" name="chkHoliday" />  <label>канікули?</label>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <div class="panel panel-default" style="display: inline-flex;width:100%;height:300px">
                    <div class="panel-body">
                        <div class="form-group">
                            <label><b>Погашення процентного боргу</b></label>
                            <table>
                                <tr>
                                    <td colspan="2">
                                        <label>Періодичність</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <select kendo-drop-down-list name="ddlFreqInt" id="ddlFreqInt" style="width: 150px" k-ng-model="credit.freqIntValue" k-options="ddlFreqIntOptions"></select>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <input type="checkbox" ng-model="credit.diffDaysValue" id="chkDiffDays" name="chkDiffDays" />  
                                        <label>Призначити погашення % у відмінні дні від основного боргу</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label>День</label>
                                    </td>
                                    <td>
                                        <label>Перша платіжна дата</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="text" name="tbDayPayDiff" id="tbDayPayDiff" ng-model="credit.dayPayDiffValue" class="k-textbox" style="width: 100px" 
                                               ng-disabled="!credit.diffDaysValue" data-daypaydiff-msg="Не коректно введено день погашення" />
                                    </td>
                                    <td>
                                        <input kendo-date-picker name="dpFirtsPayDiff" id="dpFirtsPayDiff" k-ng-model="credit.firstPayDiffValue" k-options="dpDateFormatOptions" 
                                               ng-disabled="!credit.diffDaysValue" data-firstpaydiff-msg="Дата погашення менше дати видачі" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <label>За попередній</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <select kendo-drop-down-list name="ddlPrevious" id="ddlPrevious" style="width: 100px" k-ng-model="credit.previousValue" k-options="ddlPreviousOptions"></select>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
<style>
    .k-invalid-msg.field-validation-error{
        position: absolute !important;
        width: auto;
    }
</style>