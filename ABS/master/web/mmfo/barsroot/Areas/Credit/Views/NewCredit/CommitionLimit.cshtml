@{
    Layout = null;
    //ViewBag.Title = "";
}
<div ng-controller="Credit.commitionLimitCtrl" style="width: 100%">
    <table>
        <tr>
            <td>
                <div class="panel panel-default" style="display: inline-flex;width:100%">
                    <div class="panel-body">
                        <div class="form-group">
                            <label><b>Початкова, Одноразова</b></label>
                            <label class="lbl-top">+ Дисконт (ПЛЮС), - Премія (МІНУС)</label>
                            <label>Сума:</label>  <input type="text" ng-model="credit.discontSumValue" class="k-textbox" style="width: 100px" />
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <div class="panel panel-default" style="display: inline-flex;width:100%">
                    <div class="panel-body">
                        <div class="form-group">
                            <label><b>Пеня</b></label>
                            <div class="form-group">
                                <div>
                                    <input type="checkbox" ng-model="credit.isPenaltiesValue" />
                                    <label>Базова ставка пені</label>
                                </div>
                                <div>
                                    <input type="text" ng-model="credit.penaltiesRateValue" class="k-textbox" style="width: 100px" ng-disabled="credit.isPenaltiesValue" />
                                    <label>%(річна)</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <label class="lbl-top">Вал. комісійного рахунку</label>
                <select kendo-drop-down-list name="ddlCurComAcc" id="ddlCurComAcc" style="width: 300px" k-ng-model="credit.curComAccValue" k-options="ddlCurComAccOptions"></select>  
            </td>
            <td>
                <div class="panel panel-default" style="display: inline-flex;width:100%">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="lbl-top"><b>За дострокове погашення</b></label>
                            <input type="text" ng-model="credit.earlyRateValue" class="k-textbox" style="width: 100px" />
                            <label>%</label>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="panel panel-default" style="display: inline-flex;width:100%">
                    <div class="panel-body">
                        <div class="form-group">
                            <label><b>Щомісячна, Багаторазова</b></label>
                            <div class="form-group">
                                <div>
                                    <label class="lbl-top">Метод</label>
                                    <select kendo-drop-down-list style="width: 300px" k-ng-model="credit.metrValue" k-options="ddlMetrOptions"></select>
                                </div>
                                <br />
                                <div>
                                    <input type="text" ng-model="credit.metrRateValue" class="k-textbox" style="width: 100px" />  <label>% або сума в залежності від метода</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td style="vertical-align:top">
                <div class="panel panel-default" style="display: inline-flex;width:100%">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="lbl-top"><b>Комісія за невикористаний ліміт</b></label>
                            <input type="text" ng-model="credit.unusedLimitValue" class="k-textbox" style="width: 100px" />  <label>%</label>
                            <select kendo-drop-down-list style="width: 150px" k-ng-model="credit.listUnsedValue" k-options="ddlListUnsedOptions"></select>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>