@{

    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
}
@using BarsWeb.Areas.Ndi.Models
@model MainOptionsViewModel
<div class="container">
    <h2>Завантаження файла</h2>
    
    <form id="uploadFormWithParams" action="@Url.Action("PostUploadFileWithParams", "ReferenceBook")">
        <div class="form-group">
            <label class="control-label col-sm-2 col-sm-offset-2">оберіть Excel файл:</label>
            <div class="col-sm-6 col-sm-offset-2 ">
                <input name="file" id="uploadInput" type="file" accept=".xlsx" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2 col-sm-offset-2" for="start">оберіть дату:</label>
            <div class="col-sm-6 col-sm-offset-2 ">
                <input type="date" id="choceDate" name="trip" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="uploadBtn" onclick="fileUploadWithParams();">Завантажити файл</button>
            </div>
        </div>
    </form>
</div>

<script>
    
    window.funcId = '@Model.NsiFuncId';
    window.tabId = '@Model.NsiTableId';
    window.code = '@Model.Code';
</script>
<script src="@Url.Content("~/Areas/Ndi/Scripts/JS/UploadFile.js")"></script>
<link rel="stylesheet" href="~/Areas/Ndi/CSS/MVC_CSS/FileUploadForm.css">
