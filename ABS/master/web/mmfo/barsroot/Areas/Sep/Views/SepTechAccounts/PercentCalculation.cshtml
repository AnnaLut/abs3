            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
        </div>
        <div class="row" style="margin-top: 10px;">
            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
            <div class="col-md-2"></div>
            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
            <div class="col-md-2"><input type="text" class="form-control" placeholder="Text input" readonly></div>
        </div>
    </div>
</script>

