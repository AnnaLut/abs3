@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "Розрахунок відсотків активних залишків";
}
@model BarsWeb.Areas.Sep.Models.ProcCard
<script src="~/Areas/Sep/Scripts/SepTechAccounts/sepTechAccountCtrl.js"></script>

<script>
    
    function goBack() {
        window.location = bars.config.urlContent('/sep/septechaccounts/Index?isBack=true');
    };

    function gridParams() {
        return {
            acc: @Model.ACC_SS,
            dat0: 0
        }
    };

    var objectBox = {};

    function loadPercentFormTemplate() {
        debugger;
        // get form data from api?
        
        // open form
        var form = kendo.template($("#PercentForm").html()),
            container = $("#percentContainer");

        container.html(form);

        $("#gridBalance").kendoGrid({
            autobind: true,
            selectable: "row",
            filterable: true,
            sortable: true,
            resizable: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [
                {
                    field: "FDAT",
                    title: "Дата"
                }, {
                    field: "OST",
                    title: "Ост.на ссуд сч"
                }
            ],
            dataSource: {
                type: 'aspnetmvc-ajax',
                serverPaging: true,
                serverSorting: true,
                serverFiltering: true,
                pageSize: 10,
                transport: {
                    read: {
                        dataType: 'json',
                        url: bars.config.urlContent('/sep//Data'),
                        data: gridParams
                    }
                },
                requestStart: function (e) {
                    bars.ui.loader("body", true);
                },
                requestEnd: function (e) {
                    bars.ui.loader("body", false);
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors",
                    model: {
                        fields: {
                            FDAT: { type: "string" },
                            OST: { type: "string" }
                        }
                    }
                }
            }
        });

        objectBox = {
            gridBalanceRef: $("#gridBalance").data("kendoGrid")
        };
    };

    function openFilterAccountsWindow() {
        var wFilterAccounts = $("#wFilterAccounts").data("kendoWindow");
        initAccountsGrid();
        wFilterAccounts.center();
        wFilterAccounts.open();
    };

    function initAccountsGrid() {
        $("#AccountsGrid").kendoGrid({
            autobind: true,
            selectable: "row",
            filterable: true,
            sortable: true,
            resizable: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [
                {
                    field: "FDAT",
                    title: "Дата"
                }, {
                    field: "OST",
                    title: "Ост.на ссуд сч"
                }
            ],
            dataSource: {
                type: 'aspnetmvc-ajax',
                serverPaging: true,
                serverSorting: true,
                serverFiltering: true,
                pageSize: 10,
                transport: {
                    read: {
                        dataType: 'json',
                        url: bars.config.urlContent('/sep//Data')
                    }
                },
                requestStart: function (e) {
                    bars.ui.loader("body", true);
                },
                requestEnd: function (e) {
                    bars.ui.loader("body", false);
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors",
                    model: {
                        fields: {
                            FDAT: { type: "string" },
                            OST: { type: "string" }
                        }
                    }
                }
            }
        });  
    };

</script>

<h2>@ViewBag.Title</h2>

<div id="Toolbar"></div>
<div id="percentContainer"></div>

