@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "АРМ Доступ до користувачів";

}
<div ng-controller="AccessToAccounts.AccountsCtrl">
    <div kendo-grid="gridAccounts" k-options="accountsOptions" k-on-change="selectedAccount(data)"></div>
    <div class="row containerGrids">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
            <div kendo-grid="gridLeftUsers" k-options="LeftUsersOptions" k-on-change="selectedLeftUser(data)"></div>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 containerButtons">
            <button ng-click="changeLeftUser()" ng-disabled='!buttonArrowRight' class='k-button buttonsGridRight'><i class='pf-icon pf-16 pf-arrow_right'></i></button>
            <button ng-click="changeRightUser()" ng-disabled='!buttonArrowLeft' class='k-button buttonsGridLeft'><i class='pf-icon pf-16 pf-arrow_left'></i></button>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
            <div kendo-grid="gridRightUsers" k-options="RightUsersOptions" k-on-change="selectedRightUser(data)"></div>
        </div>
    </div>
</div>

@Styles.Render("~/bundles/AccessToAccounts/styles")
@Scripts.Render("~/bundles/AccessToAccounts/scriptsAccounts")
