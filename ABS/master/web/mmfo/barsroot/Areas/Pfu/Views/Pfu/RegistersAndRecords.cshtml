@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = "ПФУ. Зміна статусів інформаційних рядків та реєстрів";
}

<link rel="stylesheet" href="~/Areas/Pfu/Css/Pfu/pfuMain.css">
<script src="/barsroot/scripts/respond.min.js"></script>
<script src="~/Scripts/jquery/jquery.iecors.js"></script>
<script src="~/Areas/Pfu/Scripts/Pfu/pfuBase.js"></script>
<script src="~/Areas/Pfu/Scripts/Pfu/pfuGridWindow.js"></script>
<script src="~/lib/jsZip/jszip.min.js"></script>
<script src="@Url.Content("~/Areas/Pfu/Scripts/Pfu/pfuRegistersAndRecords.js")?_18.12.2017"></script>

<h1>@ViewBag.Title</h1>

<div class="well" id="dvFilesFilter">
    <h2 class="ra-well-title">Фільтр по реєстрам</h2>
    <div class="form-horizontal form-widgets col-sm-5">
        <div class="form-group">
            <label class="control-label col-sm-6" for="searchDate"><b>Дата реєстру:</b></label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="searchDate" placeholder="Вкажіть дату реєстру" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-6" for="searchId"><b>ID реєстру:</b></label>
            <div class="col-sm-6">
                <input type="text" class="k-textbox form-control" id="searchId" placeholder="Вкажіть ID реєстру" />
            </div>
        </div>
        
    </div>
    <div class="form-horizontal form-widgets col-sm-5">
        <div class="form-group">
            <label class="control-label col-sm-6" for="searchMfo"><b>МФО:</b></label>
            <div class="col-sm-6">
                <input type="text" class="k-textbox form-control" id="searchMfo" placeholder="Вкажіть МФО" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-6" for="searchPayDate"><b>Дата&nbsp;платіжного&nbsp;календаря&nbsp;ПФУ:</b></label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="searchPayDate" placeholder="Вкажіть дату оплати" />
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>



<div id="tabstrip">
    <ul>
        <li>Перелік реєстрів</li>
        <li>Інформаційні рядки Реєстру</li>
    </ul>
    <div id="tab1">
        <div id="grid_registers"></div>
    </div>
    <div id="tab2">
        <label id="label_records" style="margin:5px; font-weight:700;"></label>
        <div id="grid_records"></div>
    </div>
</div>

<script type="text/x-kendo-template" id="fileTitle-template">
    <button id="toRecordsBtn" class='k-button' disabled>
        <i class="pf-icon pf-16 pf-arrow_right"></i>
        Перегляд реєстру
    </button>
    <button id="processRegistresBtn" class='btn btn-success' disabled>
        <i class=""></i>Обробити
    </button>
</script>

<script type="text/x-kendo-template" id="lineTitle-template">
    <button id="toRegistersBtn" class='k-button'>
        <i class="pf-icon pf-16 pf-arrow_left"></i>
        До переліку реєстрів
    </button>
    <button id="acceptedRecordsBtn" class='btn btn-success' disabled>
        <i class=""></i>Зараховано
    </button>
    <button id="returnedPFURecordsBtn" class='btn btn-danger' disabled>
        <i class=""></i>Повернуто ПФУ
    </button>
</script>