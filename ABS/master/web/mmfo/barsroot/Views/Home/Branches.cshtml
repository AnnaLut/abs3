<script type="text/javascript">
    //COBUMMFO-3819
    var roles = "@ViewBag.selectedRoles";
    if (roles.indexOf('ABSADM') === -1)
        alert(messInfoBranch(new Array("УВАГА!!!", "Ви працюєте у відділенні", '@ViewBag.selectedBranch')));

    function messInfoBranch(initArray) {
        var maxElem = initArray[0].length;
        for (var i = 0; i < initArray.length; i++)
        {
            if(maxElem < initArray[i].length)
                maxElem = initArray[i].length;
        }

        for (var i = 0; i < initArray.length; i++)
        {
            var el = initArray[i];
            initArray[i] = crateSpace((maxElem - el.length) / 2, el);
        }
       return initArray.join("\n");
    }

    function crateSpace(size, str) {
        if (size > 0)
        {
            var s = "";
            for (var i = 0; i < size; i++)
                s += " ";
           str = s.concat(str);
        }
        return str;
    }

</script>

