@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
}
<script src="/barsroot/scripts/respond.min.js"></script>

<script src="~/Areas/Pfu/Scripts/Pfu/pfuBase.js"></script>
<script src="~/Areas/Pfu/Scripts/Pfu/pfuGridWindow.js"></script>
<script src="~/Areas/Pfu/Scripts/Pfu/pfuRegistryEPC.js?v"></script>

<link rel="stylesheet" href="~/Areas/Pfu/Css/Pfu/pfuMain.css">
<link rel="stylesheet" href="~/Areas/Pfu/Css/Pfu/pfuRegistry.css">

<h1 id="title"></h1>

<div class="well" id="dvFilesFilter">
    <h2 class="ra-well-title">Перегляд результатів обробки ЕПП</h2>
    <div class="row">
        <div class="col-md-offset-2 col-md-4">
            <div class="form-group">
                <label for="searchDate"><b>Дата реєстру:</b></label>
                <input type="text" class="form-control" id="searchDate" placeholder="Вкажіть дату реєстру" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="searchId"><b>ID реєстру:</b></label>
                <input type="text" class="form-control" id="searchId" placeholder="Вкажіть ID реєстру" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-5">
            <br>
            <button id="SearchFiles" type="button" class="btn btn-primary col-xs-3" style="margin-left: 25px">
                <i class="fa fa-search"></i> Пошук
            </button>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="well" id="reestrRowsEpc">
    <h2 class="ra-well-title">Перегляд результатів обробки інформаційних рядків ЕПП</h2>
    <div class="form-horizontal form-widgets col-sm-3">
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchFullName"><b>ПІБ клієнта:</b></label>
            <div class="col-sm-8">
                <input type="text" class="k-textbox" id="searchFullName" placeholder="Вкажіть ПІБ клієнта" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchTaxID"><b>ІПН клієнта:</b></label>
            <div class="col-sm-8">
                <input type="text" class="k-textbox" id="searchTaxID" placeholder="Вкажіть ІПН клієнта" />
            </div>
        </div>
    </div>
    <div class="form-horizontal form-widgets col-sm-3">
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchEPC"><b>ЕПП:</b></label>
            <div class="col-sm-8">
                <input type="text" class="k-textbox" id="searchEPC" placeholder="Вкажіть ЕПП" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="searchState"><b>Статус:</b></label>
            <div class="col-sm-8">
                <input class="form-control" id="searchState" />
            </div>
        </div>
    </div>
    <div class="col-sm-6 bottom">
        <button id="SearchEpcBtn" type="button" class="btn btn-primary col-sm-2">
            <i class="fa fa-search"></i> Пошук
        </button>
    </div>
    <div class="clearfix"></div>
</div>

<div id="tabstrip">
    <ul>
        <li id="tab_0">Перелік реєстрів</li>
        <li id="tab_1">Інформаційні рядки реєстрів</li>
    </ul>
    <div id="tab1">
        <div id="gridFiles"></div>
    </div>
    <div id="tab2">
        <div id="gridRecords"></div>
    </div>

    <script type="text/x-kendo-template" id="fileTitle-template">
        <div class="toolbar">
            <h2 style="margin: 5px">Перелік реєстрів</h2>
        </div>
    </script>

    <script type="text/x-kendo-template" id="lineTitle-template">
        <div class="toolbar">
            <h2 style="margin: 5px">Інформаційні рядки реєстрів</h2>
        </div>
    </script>
</div>



<div id="dialogRemoveFromPay">
    <div id="gridRemoveFromPay"></div>
    <div style="margin-top: 4px;text-align: center;">
        <button id="confirmBlock" class="k-button k-primary">ОК</button>
    </div>
</div>

<script type="text/x-kendo-template" id="template">
    <div id="details-container">
        <h3>Ідентифікатор ЕПП:</h3> <span class="letter">#= EPP_NUMBER #</span>
        <hr />
        <h3>Причина знищення:</h3> <span class="letter">#= NAME_T #</span>
        <hr />
        <h3>Дата знищення:</h3> <span class="letter">#= kendo.toString(KILL_DATE, "dd.MM.yyyy") #</span>
    </div>
</script>