<button caption="Виконати" hint="Виконати подію за договором" id="btnSave">
  <command type="PlSqlBlock" successmessage="Дані збережено">
    <sql>
      begin
      grt_mgr.iu_deposits(
      p_deal_id => :p_deal_id,
      p_doc_num => :p_doc_num,
      p_doc_date => :p_doc_date,
      p_doc_enddate => :p_doc_enddate,
      p_acc => :p_dpt_acc
      );
      grt_mgr.update_event(:p_EV_ID, :p_ACTUAL_DATE, :p_COMMENT_TEXT);
      end;
    </sql>
    <parameters>
      <parameter type="FormField" name="P_DEAL_ID"/>
      <parameter type="FormField" name="P_DOC_NUM" />
      <parameter type="FormField" name="P_DOC_DATE" />
      <parameter type="FormField" name="P_DOC_ENDDATE" />
      <parameter type="FormField" name="P_DPT_ACC" />
      <parameter type="FormField" name="p_EV_ID" />
      <parameter type="FormField" name="p_ACTUAL_DATE" />
      <parameter type="FormField" name="p_COMMENT_TEXT" />
    </parameters>
  </command>
</button>