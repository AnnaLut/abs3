<?xml version="1.0" encoding="utf-8" ?>
<xmlform caption="Контрольні строки по торгових контрактах" captiontype="OnlyTitle">
  <grids>
    <grid id="gv" pagesize="10" showpagesizebox="true" title="Контрольні строки по торгових контрактах">
      <datasource>
        <sql>
          select * from cim_contract_deadlines order by DEADLINE
        </sql>
      </datasource>
      <editform style="Dialog" title="Редагування типу"  width="550" height="180" >
        <buttons defaulttype="Link">
          <button id="cmdInsert" caption="Додати рядок|Зберегти|Вiдмiнити" hint="Додати рядок|Зберегти рядок|Вiдмiнити додавання">
            <command type="Insert" successmessage="Дані збережено">
               <sql>insert into cim_contract_deadlines(DEADLINE, COMMENTS) values(:DEADLINE, :COMMENTS)</sql>
              <parameters>
                <parameter type="DataField" name="DEADLINE" />
                <parameter type="DataField" name="COMMENTS" />
              </parameters>
            </command>
          </button>
          <button id="cmdEdit" caption="Редагувати|Зберегти|Вiдмiнити" hint="Редагувати|Зберегти|Вiдмiнити">
            <command type="Edit">
              <sql>update cim_contract_deadlines set COMMENTS=:COMMENTS where DEADLINE =:DEADLINE</sql>
              <parameters>
                <parameter type="DataField" name="COMMENTS" />
                <parameter type="DataField" name="DEADLINE" />
              </parameters>
            </command>
          </button>
          <button id="cmdDel" caption="Видалити" hint="Видалити" confirmmessage="Ви дійсно хочете видалити специфікацію ?">
            <command type="Delete">
              <sql>delete from cim_contract_deadlines where DEADLINE =:DEADLINE</sql>
              <parameters>
                <parameter type="DataField" name="DEADLINE" />
              </parameters>
            </command>
          </button>
          <button id="cmdClose" caption="Закрити" hint="Закрити форму">
            <command type="Close"/>
          </button>
        </buttons>
      </editform>
      <fields>
        <field datatype="Int64" name="DEADLINE" key="true" >
          <column show="true" caption="Код" />
          <form rwmode="RW" required="true">
            <uicontrol></uicontrol>
          </form>
        </field>
        <field datatype="String" size="256" name="COMMENTS">
          <column show="true" align="Left" caption="Назва" />
          <form rwmode="RW" required="true">
            <uicontrol controlwidth="400" linescount="2"></uicontrol>
          </form>
        </field>
      </fields>
      <rowselection method="SingleRow" />
    </grid>
  </grids>
</xmlform>